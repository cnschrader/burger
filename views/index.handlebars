<h1>Burgers</h1>



<div id="container">
    <div>
        <h2>Burgers that are not devoured!</h2>
        <ul>
            {{#each burger}}
            {{#unless devouered}}
            
            {{> burger-block }}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div>
        <div>
            <h2>Burgers that are devoured!</h2>

            <ul>
                {{#each burger}}
                {{#if devouered}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div id="formcontainer">
    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ba">Burger Name:</label>
            <input type="text" id="ba" name="name">
        </div>
        <br>
<button type="submit">Add Burger</button>
</div>



</form>